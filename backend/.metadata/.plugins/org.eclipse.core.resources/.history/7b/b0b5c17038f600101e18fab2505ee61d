server:
  port: 8080

spring:
  application:
    name: api-gateway

  cloud:
    gateway:
      routes:
        - id: user-service
          uri: lb://USER-SERVICE
          predicates:
            - Path=/api/user/**

        - id: auction-service
          uri: lb://AUCTION-SERVICE
          predicates:
            - Path=/api/auctions/**

        - id: bidding-service
          uri: lb://BIDDING-SERVICE
          predicates:
            - Path=/api/bids/**

        - id: transaction-service
          uri: lb://TRANSACTION-SERVICE
          predicates:
            - Path=/api/transactions/**

      # OPTIONAL (Recommended for debugging)
      discovery:
        locator:
          enabled: true   # keep false since you are using explicit routes

eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka/

management:
  endpoints:
    web:
      exposure:
        include: health,info
